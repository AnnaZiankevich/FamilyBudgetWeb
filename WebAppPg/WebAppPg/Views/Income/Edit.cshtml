@model WebAppPg.Models.Income
@{
    ViewBag.Title = "Edit";
}

<h3>Edit income (@Model.name)</h3>
<form action="/Income/Edit/@Model.id" method="post">
    <input name="id" type="hidden" value="@Model.id">
    <p style="width: 30%; height: 20%;"><input name="Name" type="text" value="@Model.name" style="width: 100%; height: 20%;" placeholder="Name" /></p>
    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.account_id, new SelectList(Model.accountList, "id", "name"),
            new { @class = "form-control" })
        </div>

    </p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.planned_income_id, new SelectList(Model.plannedIncomesList, "id", "name"),
            new { @class = "form-control" })
        </div>
    </p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.income_source_id, new SelectList(Model.incomeSoursesList, "id", "name"),
            new { @class = "form-control" })
        </div>
    </p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.income_type_id, new SelectList(Model.incomeTypesList, "id", "name"),
            new { @class = "form-control" })
        </div>
    </p>

    <p style="width: 30%; height: 20%;"><input name="amount" type="text" style="width: 100%; height: 20%;" placeholder="Amount" value="@Model.amount"/></p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.currency_code, new SelectList(Model.currencyCodesList, "code", "code"),
            new { @class = "form-control" })
        </div>
    </p>

    <p>
        <input type="text" class="form-control" id="datetimepicker2" name="income_date" style="width: 30%;" value="@Model.income_date"/>
        <span class="glyphicon-calendar glyphicon" style="width: 20px; height: 20px;"></span>
    </p>
    <input name="row_version" type="hidden" value="@Model.row_version">
    <p>
        <input type="submit" class="btn" value="Save" style="background-color: #55c9a9; color: #ebfff9; width: 10%;" />
        <a class="btn" href="/Income/Index" style="background-color: #55c9a9; color: #ebfff9; width: 10%;">Cancel</a>
    </p>
</form>