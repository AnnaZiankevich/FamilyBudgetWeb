@model WebAppPg.Models.AccountOwner
@{
    ViewBag.Title = "Add";
}

<h3>Add new account owner</h3>
<form action="/AccountOwner/Add" method="post">
    <p style="width: 30%; height: 20%;"><input name="Name" type="text" style="width: 100%; height: 20%;" placeholder="Name"/></p>
    <p>
        <!-- div class="ml-1" /--->
            Is_active? <input name="Is_active" type="checkbox" value="" />
        <!-- /div /--->
    </p>
    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor( model => model.app_user_id, new SelectList(Model.app_user_list, "id", "user_name"),
            new { @class = "form-control"})
        </div>
    </p>
    <p><input type="submit" class="btn" style="background-color: #55c9a9; color: #ebfff9; width: 10%;" value="Save" /></p>

</form>

