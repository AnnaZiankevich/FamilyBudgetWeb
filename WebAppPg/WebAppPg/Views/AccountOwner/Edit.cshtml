@model WebAppPg.Models.AccountOwner
@{
    ViewBag.Title = "Edit";
}

<h3>Edit account owner[@Model.name]</h3>
<form action="/AccountOwner/Edit/@Model.id" method="post">
    <input name="id" type="hidden" value="@Model.id">
    <p style="width: 30%; height: 20%;"><input name="Name" type="text" value="@Model.name" style="width: 100%; height: 20%;" placeholder="Name"/></p>
    <p>
        Is active? @Html.CheckBoxFor(model => model.is_active)
    </p>
    <input name="row_version" type="hidden" value="@Model.row_version">
    <p>
        <div style="width: 30%; height: 20%;">
        @Html.DropDownListFor(model => model.app_user_id, new SelectList(Model.app_user_list, "id", "user_name")
        , new { @class = "form-control" })
        </div>
    </p>
    <!--p>First Date: <input name="FirstDate" type="" value="" /></p-->
    <p><input type="submit" class="btn " value="Save" style="background-color: #55c9a9; color: #ebfff9; width: 10%;" /></p>
</form>

