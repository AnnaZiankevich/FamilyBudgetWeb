@model WebAppPg.Models.Account
@{
    ViewBag.Title = "Add";
}

<h3>Add new account</h3>
<form action="/Account/Add?@Model.account_owner_id" method="post">
    <p style="width: 30%; height: 20%;"><input name="name" type="text" style="width: 100%; height: 20%;" placeholder="Name" /></p>
    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.account_type_code, new SelectList(Model.accountTypesList, "code", "name"),
            new { @class = "form-control" })
        </div>
    </p>
    <input name="accOwnerId" type="hidden" value="@Model.account_owner_id">
    <p>
        Is_active? @Html.CheckBox("is_active", @Model.is_active) <!---input name="is_active" type="checkbox" value="@Model.is_active" /> -->
    </p>
    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.currency_code, new SelectList(Model.currencyCodesList, "code", "code"),
            new { @class = "form-control" })
        </div>
    </p>
    <p>
        <input type="submit" class="btn" style="background-color: #55c9a9; color: #ebfff9; width: 10%;" value="Save" />
        <a class="btn" href="/Account/List?accOwnerId=@Model.account_owner_id" style="background-color: #55c9a9; color: #ebfff9; width: 10%;">Cancel</a>
    </p>

</form>
