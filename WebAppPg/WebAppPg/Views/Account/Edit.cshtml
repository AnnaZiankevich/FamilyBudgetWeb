@model WebAppPg.Models.Account
@{
    ViewBag.Title = "Edit";
}

<h3>Edit account [@Model.name]</h3>
<form action="/Account/Edit/@Model.id" method="post">
    <input name="id" type="hidden" value="@Model.id">
    <p style="width: 30%; height: 20%;"><input name="Name" type="text" value="@Model.name" style="width: 100%; height: 20%;" placeholder="Name" /></p>
    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.account_type_code, new SelectList(Model.accountTypesList, "code", "name"),
            new { @class = "form-control" })
        </div>
    </p>
    <input name="account_owner_id" type="hidden" value="@Model.account_owner_id">
    <p>
        Is active? @Html.CheckBoxFor(model => model.is_active)
    </p>
    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.currency_code, new SelectList(Model.currencyCodesList, "code", "code"),
            new { @class = "form-control" })
        </div>
    </p>
    <input name="row_version" type="hidden" value="@Model.row_version">
    <p>
        <input type="submit" class="btn" value="Save" style="background-color: #55c9a9; color: #ebfff9; width: 10%;" />
        <a class="btn" href="/Account/List?accOwnerId=@Model.account_owner_id" style="background-color: #55c9a9; color: #ebfff9; width: 10%;">Cancel</a>
    </p>
</form>
