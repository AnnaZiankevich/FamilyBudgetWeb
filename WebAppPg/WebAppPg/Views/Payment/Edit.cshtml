@model WebAppPg.Models.Payment
@{
    ViewBag.Title = "Add";
}

<h3>Edit payment (@Model.name)</h3>
<form action="/Payment/Edit/@Model.id" method="post">

    <p style="width: 30%; height: 20%;"><input name="name" type="text" style="width: 100%; height: 20%;" placeholder="Name" value="@Model.name"/></p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.account_id, new SelectList(Model.accountList, "id", "name"),
            new { @class = "form-control" })
        </div>

    </p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.planned_payment_id, new SelectList(Model.plannedPaymentsList, "id", "name"),
            new { @class = "form-control" })
        </div>
    </p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.payment_receiver_id, new SelectList(Model.paymentReceiversList, "id", "name"),
            new { @class = "form-control" })
        </div>
    </p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.payment_type_id, new SelectList(Model.paymentTypesList, "id", "name"),
            new { @class = "form-control" })
        </div>
    </p>

    <p style="width: 30%; height: 20%;"><input name="amount" type="text" style="width: 100%; height: 20%;" placeholder="Amount" value="@Model.amount"/></p>

    <p>
        <div style="width: 30%; height: 20%;">
            @Html.DropDownListFor(model => model.currency_code, new SelectList(Model.currencyCodesList, "code", "code"),
            new { @class = "form-control" })
        </div>
    </p>

    <p>
        <input type="text" class="form-control" id="datetimepicker2" name="payment_date" style="width: 30%;" value="@Model.payment_date">
    </p>

    <p>
        <input type="submit" class="btn" style="background-color: #55c9a9; color: #ebfff9; width: 10%;" value="Save" />
        <a class="btn" href="/Payment/Index" style="background-color: #55c9a9; color: #ebfff9; width: 10%;">Cancel</a>
    </p>

</form>
