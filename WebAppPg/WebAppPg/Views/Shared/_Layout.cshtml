<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppPg</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-datetimepicker.min.css" />
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />/> -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        ::selection {
            background: #a59ae8;
            color: #fff;
        }
    </style>
</head>
    <body style="background-color: #F6F8FA;">

        <div class="vertical-nav bg-white" id="sidebar">

            <div class="py-4 px-3 mb-4 bg-light">
                <div class="mx-auto d-block" align-items-center" style="text-align: center; align-items: center;">
                    <div class="">
                        <img loading="lazy" src="~/img/logo2.png" alt="logo" width="115" height="135" class="mx-auto d-block">
                    </div>
                    <div class="media-body">
                        <h4 class="m-0 text-muted font-weight-bold">SMARTER</h4>
                        <p class="font-weight-normal text-muted mb-0" style="font-size: 13px;">The budget tracker</p>
                    </div>
                </div>
            </div>

            <ul class="nav flex-column bg-white mb-0">
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/img/home.png" alt="home_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="AccountOwner" asp-action="Index">
                        <img src="~/img/user.png" alt="account_owner_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Account owners
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Income" asp-action="Index">
                        <img src="~/img/money.png" alt="income_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Incomes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Payment" asp-action="Index">
                        <img src="~/img/wallet.png" alt="payment_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Payments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="PlannedIncome" asp-action="Index">
                        <img src="~/img/income.png" alt="planned_income_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Planned incomes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="PlannedPayment" asp-action="Index">
                        <img src="~/img/payments.png" alt="planned_payment_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Planned payments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Total" asp-action="List">
                        <img src="~/img/coins.png" alt="total_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Balances
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="InteraccountTransaction" asp-action="Index">
                        <img src="~/img/transaction.png" alt="transactuin_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Interaccount transactions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Balance" asp-action="List">
                        <img src="~/img/save-money.png" alt="balance_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Account balances
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="Home" asp-action="Privacy">
                        <img src="~/img/lock.png" alt="balance_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Privacy
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark d-flex" asp-area="" asp-controller="User" asp-action="LogOut">
                        <img src="~/img/logout.png" alt="balance_icon" style="width:10%; height: 10%; margin-right: 10%;" />
                        Log out
                    </a>
                </li>
            </ul>
        </div>

        <div class="page-content p-5" id="content">
            <!-- Toggle button -->
    <button id="sidebarCollapse" type="button" class="btn btn-light rounded-pill shadow-sm px-4 mb-4" style="background-color: #f1efff; ">
        <small class="text-uppercase font-weight-bold" id="toggleMessage"> Hide menu</small>
    </button>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Smarter - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/jquery-3.2.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/moment-with-locales.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker2, #datetimepicker3, #datetimepicker4').datetimepicker({
                format: 'DD.MM.YYYY',
                defaultDate: moment('01.01.2022').format('DD.MM.YYYY'),
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-chevron-up',
                    down: 'fa fa-chevron-down',
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'fa fa-arrows ',
                    clear: 'fa fa-trash',
                    close: 'fa fa-times'
                }
            });
        });

        $(function () {
            $("#setDate1").click(function () {
                $('#datetimepicker2').data("DateTimePicker").date(null);
            });
        });

        $(function () {
            $("#setDate2").click(function () {
                $('#datetimepicker3').data("DateTimePicker").date(null);
            });
        });

        $(function () {
            $("#setDate3").click(function () {
                $('#datetimepicker4').data("DateTimePicker").date(null);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
